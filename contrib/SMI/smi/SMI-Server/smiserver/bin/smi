#! /bin/sh
#
#

set -e

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DESC="SMI"
NAME=smi-server
DAEMON=/usr/local/smiserver/bin/$NAME
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/smi

# Gracefully exit if the package has been removed.
test -x $DAEMON || exit 0

#
#	Function that starts the daemon/service.
#
d_start() {
	$DAEMON start
}

#
#	Function that stops the daemon/service.
#
d_stop() {
	$DAEMON stop
}

#
#       Function that starts the daemon/service in verbose mode.
#
d_console() {
        $DAEMON console 
}

case "$1" in
  start)
	echo "Iniciando $DESC: $NAME"
	d_start
	;;
  stop)
	echo "Deteniendo $DESC: $NAME"
	d_stop
	;;
  console)
	echo "Iniciando $DESC: $NAME"
	d_console
  	;;
  restart)
	echo "Reiniciando $DESC: $NAME"
	d_stop
	sleep 1
	d_start
	;;
  *)
	echo "Uso: $SCRIPTNAME {start|stop|console|restart}" >&2
	exit 3
	;;
esac

exit 0
