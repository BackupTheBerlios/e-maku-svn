<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?><!--     Archivo de configuracion / Instalador JMidas    Para crear el instalador, ejecute:     % compile install.xml -b . -o instalador-jmidas.jar -k standard    Dependencia: Izpack--><installation version="1.0">    <!--         Seccion de Informacion    -->    <info>        <appname>JMidas: Software Administrativo/Financiero</appname>        <appversion>1.0 Beta</appversion>        <authors>            <author name="Staff Midas" email="midas@silenus.com.co"/>        </authors>        <url>http://midas.silenus.com.co</url>    </info>    <!--         Preferencias de la interfaz grafica.        Dimension de la ventana: 640x48 (Sin posibilidad de redimensionamiento)    -->    <guiprefs width="640" height="480" resizable="no"/>    <!--         Localizacion.    -->    <locale>        <langpack iso3="es_ES"/>        <langpack iso3="en_EN"/>    </locale>    <!--         Seccion de Recursos.    -->    <resources>        <res id="LicencePanel.licence" type="html" src="LICENCIA.TXT"/>        <res id="InfoPanel.info" src="LEAME.TXT"/>    </resources>    <!--         Seccion de Pantallas.        En esta seccion se indican las pantallas y el orden en el que        el instalador va a desplegarlas.      -->    <panels>        <panel classname="HelloPanel"/>        <panel classname="InfoPanel"/>        <panel classname="LicencePanel"/>        <panel classname="TargetPanel"/>         <panel classname="PacksPanel"/>        <panel classname="InstallPanel"/>        <panel classname="FinishPanel"/>    </panels>    <!--         Seccion de Paquetes        En esta seccion se especifican los componentes en los que se divide JMidas     -->    <packs>        <pack name="Librerias" required="yes">            <description>Librerias requeridas por todos los componentes de JMidas</description>            <file src="lib" targetdir="$INSTALL_PATH"/>            <file src="LEAME.TXT" targetdir="$INSTALL_PATH"/>            <file src="LICENCIA.TXT" targetdir="$INSTALL_PATH"/>            <parsable targetfile="$INSTALL_PATH/script.bat"/> <!-- The file will be parsed -->        </pack>        <pack name="Servidor JMidas" required="yes">            <description>Binarios y archivos de configuración requeridos por el Servidor de Transacciones</description>             <file src="conf/server.conf" targetdir="$INSTALL_PATH/conf"/>             <file src="conf/wrapper.conf" targetdir="$INSTALL_PATH/conf"/>             <file src="sql" targetdir="$INSTALL_PATH/conf"/>             <file src="bin/wrapper" targetdir="$INSTALL_PATH/bin"/>             <file src="bin/jmidas_daemon" targetdir="$INSTALL_PATH/bin"/>        </pack>        <pack name="Cliente JMidas" required="yes">            <description>Binarios y archivos de configuracion requeridos por la aplicación Cliente</description>        </pack>        <pack name="Documentación" required="no">            <description>Manuales de Usuario Final</description>            <file src="documentacion" targetdir="$INSTALL_PATH"/>        </pack>        <pack name="Código Fuente" required="no">            <description>Codigo fuente de todos los componentes de JMidas</description>            <file src="JMLib" targetdir="$INSTALL_PATH"/>             <file src="JMClient" targetdir="$INSTALL_PATH"/>            <file src="JMServer" targetdir="$INSTALL_PATH"/>        </pack>    </packs></installation>